---
import Layout from "../layouts/Layout.astro";
import Ratings from "../components/Ratings.astro";

const isProd = import.meta.env.PROD;
const isDev = import.meta.env.DEV;
const isSSR = import.meta.env.SSR;
const envVar = import.meta.env.ASTRO_DB_REMOTE_URL;
const token = import.meta.env.ASTRO_AUTH_TOKEN;

console.log({
  isProd,
  isDev,
  isSSR,
  envVar,
  token,
});
---

<Layout title="">
  <main>
    <header class="bg-slate-800 text-white">
      <div class="mx-auto p-4">
        <h1 class="text-8xl font-black text-center">movie night</h1>
      </div>
      <nav class="bg-slate-700">
        <div class="container mx-auto p-4">
          <ul class="flex justify-center space-x-8 text-2xl">
            <li>
              <a href="/movies" class="hover:text-gray-300">Past</a>
            </li>
            <li>
              <a href="/rankings" class="hover:text-gray-300">The List</a>
            </li>
            <li>
              <a href="/watchers" class="hover:text-gray-300">Stats</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <Ratings />
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
  }
</style>
