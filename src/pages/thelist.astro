---
import Layout from "../layouts/Layout.astro";
import { actions } from "astro:actions";
import { TheList } from "@components/Tables/TheList";

const auth = Astro.locals.auth();
const clerkId = auth?.userId;
const { data: user } = await Astro.callAction(actions.auth.getUser, {
  clerkId: auth?.userId ?? "",
});
const isAdmin = user?.viewer?.isAdmin ?? false;

const result = await Astro.callAction(actions.util.getTheList, {
  clerkId: auth?.userId ?? "",
});
---

<Layout title="The List">
  <TheList
    client:only="react"
    tableData={result?.data?.tableData ?? []}
    isAdmin={isAdmin}
  />
</Layout>
