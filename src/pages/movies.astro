---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const movies = await getCollection("Movies");
---

<Layout title="Movies">
  <div class="container mx-auto p-4 text-white">
    <h1 class="text-4xl font-bold mb-4">Movies</h1>
    <ul class="space-y-2">
      {
        movies.map((movie) => (
          <li class="bg-gray-800 rounded-lg hover:bg-gray-700 transition duration-300">
            <a
              href={`/movies/${movie.data.id}`}
              class="block p-4 text-lg font-semibold text-blue-400 hover:text-blue-300"
            >
              {movie.data.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
